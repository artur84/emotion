<?xml version="1.0"?>
<robot name="visual">

<material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.06"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.06"/>
      <material name="white"/>
    </visual>
  </link>

  <link name="link2">
    <visual>
      <geometry>
        <box size="0.2 0.01 0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.1 0 0"/>
      <material name="white"/>
    </visual>
  </link>

<link name="link3">
    <visual>
      <geometry>
        <box size="0.2 0.01 0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.1 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_link1" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.507" upper="1.507" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 0"/>
    <parent link="base_link"/>
    <child link="link1"/>
  </joint>

<joint name="link1_to_link2" type="revolute">
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="-1.507" upper="0.22" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 0.06"/>
    <parent link="link1"/>
    <child link="link2"/>
  </joint>

<joint name="link2_to_link3" type="revolute">
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="-1.5" upper="1.5" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0.2 0.0 0.0"/>
    <parent link="link2"/>
    <child link="link3"/>
  </joint>

 

</robot>
